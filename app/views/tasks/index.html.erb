<p style="color: green"><%= notice %></p>

<div style="display:flex; justify-content: space-between; align-items: center; margin-bottom: 20px">
  <h1 style="margin-left: 100px; font-family: Arial">Tasks</h1>
  <p style="margin-right: 80px; background-color: green; width: 140px; padding: 13px; border-radius: 15px;">
  <%= link_to "New task +", new_task_path, style:'color: #fff; text-decoration: none; justify-content: center; align-items: center; display: flex; font-size: 17px; font-family: Arial'%>
  </p>
</div>

<div id="tasks" style="display: flex; flex-wrap: wrap; justify-content: center;">
  <% @tasks.each do |task| %>
    <div>
      <%= render task %>
      <p style="background-color: blue; width: 150px; padding: 10px; border-radius: 8px; margin-left: 20px">
        <%= link_to "Show this task", task, style:'color: #fff; text-decoration: none; justify-content: center; align-items: center; display: flex; font-size: 15px; font-family: Arial;' %>
      </p>
    </div>
  <% end %>
</div>
